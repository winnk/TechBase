{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Question</label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="author">User's name</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="date">Today's date</label>
        {{input value=date id="date"}}
      </div>

     <button {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>Save New Question</button>
{{/if}}
