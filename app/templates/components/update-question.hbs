{{#if updateQuestionForm}}
  <h4>Update {{question.title}}'s {{question.body}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Brief title for question</label>
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="body">Question</label>
        {{input value=body id="body" placeholder=question.body}}
      </div>

      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=question.date}}
      </div>

      <button {{action 'update' question}}>Save changes</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
