
{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Comment</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>
      <button {{action 'saveComment'}}>Save Comment</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
